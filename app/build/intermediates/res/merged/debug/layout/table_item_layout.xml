<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10">


            <TextView
                android:layout_marginLeft="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_table_rank"
                android:textSize="@dimen/name_league_size"
                android:gravity="center"
                android:text="1."
                android:layout_weight="1"/>

            <!--
            <ImageView
                android:id="@+id/item_table_img"
                android:layout_width="@dimen/logo_league_width"
                android:layout_height="@dimen/logo_league_heigh" />-->


            <TextView
                android:layout_marginLeft="2dp"
                android:text="Manchester city"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_table_name"
                android:textSize="@dimen/name_league_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"/>


            <TextView
                android:text="8"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_table_plays"
                android:textSize="@dimen/name_league_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="30"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_table_goals"
                android:textSize="@dimen/name_league_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="20"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_table_goalsAgainst"
                android:textSize="@dimen/name_league_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <!--
            <TextView
                android:layout_marginLeft="10dp"
                android:text="10"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_table_goalsDiff"
                android:textSize="@dimen/name_league_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
            <TextView
                android:text="18"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_table_points"
                android:textSize="@dimen/name_league_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>





    </android.support.v7.widget.CardView>
</LinearLayout>
