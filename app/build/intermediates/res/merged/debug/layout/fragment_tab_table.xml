<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alexd10s.com.footballdatabase.fragments.TabTable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tab_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/title_tab_table"
            android:textColor="@color/app_black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_titles"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="2dp"
                android:text="Position"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_title_position"
                android:textSize="@dimen/name_league_size_title"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <TextView
                android:layout_marginLeft="2dp"
                android:text="Team"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_title_name"
                android:textSize="@dimen/name_league_size_title"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"/>

            <TextView
                android:text="Games"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_title_plays"
                android:textSize="@dimen/name_league_size_title"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="Goals"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_title_goals"
                android:textSize="@dimen/name_league_size_title"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="Against"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_title_goalsAgainst"
                android:textSize="@dimen/name_league_size_title"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"/>

            <!--
            <TextView
                android:layout_marginLeft="10dp"
                android:text="Diff."
                android:layout_centerHorizontal="true"
                android:id="@+id/item_title_goalsDiff"
                android:textSize="@dimen/name_league_size_title"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->

            <TextView
                android:text="Points"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_title_points"
                android:textSize="@dimen/name_league_size_title"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/table_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scrollbars="vertical" />
    </LinearLayout>

</FrameLayout>
